{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "bundler",
    "module": "ESNext",
    "target": "ESNext",
    "declaration": false,
    "removeComments": false,
    "alwaysStrict": true,
    "rootDir": ".",
    "outDir": "lib",
    "sourceMap": false,
    "skipDefaultLibCheck": true
  },
  "include": ["lib/**/*"],
  "exclude": ["node_modules"]
}